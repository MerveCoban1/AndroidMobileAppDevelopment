<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCBA6"
    android:orientation="vertical"
    tools:context=".AdresBilgileri">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Adres Bilgilerinizi Giriniz"
        android:textColor="#0F3057"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:gravity="center"
        android:id="@+id/sehirBilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sehir:"
        android:textColorHint="#0F3057" />

    <EditText
        android:gravity="center"
        android:id="@+id/ilceBilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilce:"
        android:textColorHint="#0F3057" />

    <EditText
        android:gravity="center"
        android:id="@+id/mahalleBilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mahalle:"
        android:textColorHint="#0F3057" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ILERI"
        android:id="@+id/ileri"
        android:background="@drawable/menu_button_back"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GERI"
        android:id="@+id/geri"
        android:background="@drawable/menu_button_back"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>


</LinearLayout>